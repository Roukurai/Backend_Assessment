<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:background="@color/black"
    android:layout_margin="16dp"
    android:layout_height="180dp">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivQuery"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvQueryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_toRightOf="@id/ivQuery"
        android:layout_alignParentTop="true"
        android:text="This is Test Title"/>

    <TextView
        android:id="@+id/tvQueryUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivQuery"
        android:layout_below="@id/tvQueryTitle"
        android:text="This is test Username"/>

    <TextView
        android:id="@+id/tvQueryAnswerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivQuery"
        android:layout_below="@id/tvQueryUsername"
        android:text="This is the Answer Count"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>